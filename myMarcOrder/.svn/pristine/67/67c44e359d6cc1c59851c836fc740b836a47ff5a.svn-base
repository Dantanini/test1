<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="1dp"
    android:background="#F0FFF0"
    >
    
    <LinearLayout  android:id="@+id/layoutASO1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_alignParentLeft="true"
    >       
    <Button 
        android:id="@+id/btnASOCencel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="返回"
        android:textColor="#000000"
        android:layout_marginRight="1sp"
        android:minHeight="35dp"
        android:background="@drawable/button_sp1"
        />
    <TextView 
        android:id="@+id/lblASOTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="查詢歷史訂單"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FA0300"
        android:minHeight="35dp"
        />
    <Button 
        android:id="@+id/btnASOOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="再次購買" 
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginLeft="1sp"
        android:minHeight="35dp"
        android:background="@drawable/button_sp1"
        />
       </LinearLayout>

    <TextView
        android:id="@+id/txtMsgASO2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"        
        android:background="@drawable/corner_3"        
        android:text="在項目上長按會顯示QR碼\n按下再次購買，該筆訂單會加入購物車!"
        />
    
    <ListView
        android:id="@+id/listItemASO2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="150dp"
        android:background="@drawable/corner_3"
        />

</LinearLayout>

