<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="1dp"
    >
    
    <LinearLayout  android:id="@+id/layoutAOC1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:layout_alignParentLeft="true"
    >       
    <Button 
        android:id="@+id/btnAOCCencel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="繼續點餐"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_marginRight="1sp"
        android:minHeight="35dp"
        android:background="@drawable/corner_2"
        />
    <TextView 
        android:id="@+id/lblAOCTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="訂單確認"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FA0300"
        android:minHeight="35dp"
        />
    <Button 
        android:id="@+id/btnAOCOk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="取消訂單"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_marginLeft="1sp"
        android:minHeight="35dp"
        android:background="@drawable/corner_2"
        />
       </LinearLayout>
       
<ScrollView 
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
    	android:background="@drawable/corner_2"
    >
    <LinearLayout
        android:id="@+id/LinearLayoutAOC4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
 		android:orientation="vertical"
        >
        
	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
        android:layout_marginTop="10sp"
    	>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="姓名："
        android:textSize="20sp"
        android:layout_marginLeft="10sp"
        />
    <EditText 
        android:id="@+id/txtAOCCName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:hint="請輸入姓名"        
        android:textSize="20sp"
        />
	</LinearLayout>
	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
    	>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="電話："
        android:textSize="20sp"
        />
    <EditText 
        android:id="@+id/txtAOCCPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:hint="請輸入電話號碼"        
        android:textSize="20sp"
        android:inputType="phone"
        />
	</LinearLayout>
	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
    	>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="備註："
        android:textSize="20sp"
        />
    <EditText 
        android:id="@+id/txtAOCCOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:hint="在此輸入"        
        android:textSize="20sp"
        />
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/LinearLayoutAOC5"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
    	>
	<CheckBox 
	    android:id="@+id/ckbAOC1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="加入會員"
	    />
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="欲加入會員，請打勾"
	    android:textSize="13sp"
	    android:layout_marginLeft="10sp"
	    />
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/LinearLayoutAOC2"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:visibility="gone"
    	>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="帳號："
        android:textSize="20sp"
        />
    <EditText 
        android:id="@+id/txtAOCCId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:hint="請輸入您的帳號"        
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        />
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/LinearLayoutAOC1"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:visibility="gone"
    	>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="密碼："
        android:textSize="20sp"
        />
    <EditText 
        android:id="@+id/txtAOCCPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:hint="請輸入密碼"        
        android:textSize="20sp"
        android:inputType="textPassword"
        />
	</LinearLayout>
		<LinearLayout 
	    android:id="@+id/LinearLayoutAOC6"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:visibility="gone"
    	>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="確認密碼："
        android:textSize="20sp"
        />
    <EditText 
        android:id="@+id/txtAOCCPasswordCompare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:hint="請再次輸入密碼"        
        android:textSize="20sp"
        android:inputType="textPassword"
        />
	</LinearLayout>
	
		<LinearLayout 
	    android:id="@+id/LinearLayoutAOC7"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:visibility="gone"
    	>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Email："
        android:textSize="20sp"
        />
    <EditText 
        android:id="@+id/txtAOCCEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:hint="請輸入Email"        
        android:textSize="20sp"
        android:inputType="textUri"
        />
	</LinearLayout>
		
		
		
	<LinearLayout 
	    android:id="@+id/LinearLayoutAOC3"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
        android:layout_marginTop="20sp"
    	>
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="送出訂單"
        android:background="@drawable/button_sp2"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnSend"
        android:layout_marginTop="20sp"
        />
	</LinearLayout>
    </LinearLayout>
    </ScrollView>
	
</LinearLayout>

