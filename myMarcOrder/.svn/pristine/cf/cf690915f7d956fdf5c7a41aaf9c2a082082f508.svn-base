<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="1dp"
    >
    
    <LinearLayout  android:id="@+id/layoutOITES1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_alignParentLeft="true"
    >       
    <Button 
        android:id="@+id/btnOITESCencel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="取消"
        android:textColor="#000000"
        android:layout_marginRight="1sp"
        android:minHeight="35dp"
        android:background="@drawable/button_sp2"
        />
    <TextView 
        android:id="@+id/lblOITESTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="編輯"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:minHeight="35dp"
        />
    <Button 
        android:id="@+id/btnOITESOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="確定" 
        android:textColor="#000000"
        android:layout_marginLeft="1sp"
        android:minHeight="35dp"
        android:background="@drawable/button_sp2"
        />
       </LinearLayout>

    <TextView
        android:id="@+id/txtOITESMsg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"        
        android:background="@drawable/corner_2"        
        />
    
    <ListView
        android:id="@+id/listOITESItem2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="150dp"
        android:background="@drawable/corner_2"
        />

</LinearLayout>

