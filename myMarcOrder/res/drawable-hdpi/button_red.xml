<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#FF3937"
                android:centerColor="#A00200"
                android:endColor="#FF3937"
                android:angle="270" />
   			<stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
                android:radius="2dp" />

        </shape>
    </item>
 <item android:state_pressed="true">
        <shape>
            <solid
    android:color="#FF3937" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
    android:radius="2dp" />

        </shape>
    </item>
</selector>