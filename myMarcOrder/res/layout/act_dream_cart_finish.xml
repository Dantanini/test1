<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="1dp"
    >
    
    <LinearLayout  android:id="@+id/layoutADCF1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_alignParentLeft="true"
    >       
    <Button 
        android:id="@+id/btnADCFCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="返回"
        android:textColor="#000000"
        android:layout_marginRight="1sp"
        android:minHeight="35dp"
        android:background="@drawable/button_sp2"
        />
    <TextView 
        android:id="@+id/lblADCFTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="夢幻餐車"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#FA0300"
        android:minHeight="35dp"
        />
    <Button 
        android:id="@+id/btnADCFOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="完成 "
        android:textColor="#000000"
        android:layout_marginLeft="1sp"
        android:minHeight="35dp"
        android:background="@drawable/button_sp2"
        />
       </LinearLayout>

    <TextView
        android:id="@+id/txtADCFMsg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="left"
        android:background="@drawable/corner_2"        
        />
    
    <ListView
        android:id="@+id/listADCFItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="150dp"
        android:background="@drawable/corner_2"
        />

</LinearLayout>

